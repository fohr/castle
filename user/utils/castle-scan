#!/bin/bash

DISKTAB=/etc/acunu/disks

if [ -e ${DISKTAB} ]; then
    cat ${DISKTAB}
    exit 0
fi

# keep this for loop in sync with castle-claim
for dev in /dev/sd* /dev/hd* /dev/xvd*
do
  [ -e "$dev" ] || continue

  if castle-probe-device "$dev" >/dev/null 2>&1
  then
      echo "$dev"
  fi
done
